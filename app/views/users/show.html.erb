<body>

  <main>

    <p id="notice"></p>

    <div class="container px-5 px-sm-0">

      <div class="row">

        <div class="col-md-3">
          <%= render 'new',user:@user,users:@users,book:@book %>
        </div>

        <div class="col-md-8 offset md-1">

          <h1>Books</h1>

          <% @books.each do |book| %>

          <table class="table table-hover table-inverse">

            <thead>
              <tr>
                <th></th>
                <th>Title</th>
                <th>Option</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <tr>
                <tb><%= image_tag @user.get_profile_image(100,100) %></tb>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td><%= link_to'Show',book_path(book.id) %></td>
               </tr>
            </tbody>

          </table>

          <%end%>
    </div>

  </main>

  <footer>

    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>

  </footer>

</body>



