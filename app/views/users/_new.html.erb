<div class="col-md-3">

  <h2>User info</h2>

  <p><%= image_tag user.get_image(100,100) %></p>

  <table class="table">

  <tbody>

   <tr>
   </tr>

   <tr>
    <th>name</th>
    <th><%= user.name %></th>
   </tr>

   <tr>
    <th>introduction</th>
    <th><%= user.introduction %></th>
   </tr>

  </tbody>
  </table>

<div class="row">
 <%= link_to"edit",edit_user_path(user.id),class:"btn btn-outline-secondary" %>
</div>



<h2 class="mt-3">New Book</h2>

<%= form_with model: book do |f| %>

<div class="form-group">

  <label for="book_title">Title</labele>

  <%= f.text_field :title %>

</div>

<div class="form-gruop">

  <p>Option</p>

  <%= f.text_area :body %>

</div>

<div class="form-group">

  <%= f.submit 'Create Book' %>

</div>

<% end %>
</div>

 <% if flash[:notice] %>

  <p id="notice">

   <%= flash[:notice] %>

  </p>

 <% end %>