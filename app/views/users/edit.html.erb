<body>

 <main>

  <div class="container">

   <div class="row">

    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

  <h1>User Info</h1>

  <% if @user.errors.any? %>
    <%= @user.errors.count %>Error!!
   <ul>
    <% @user.errors.full_messages.each do |message| %>
     <li><%= message %></li>
   <% end %>
  </ul>
 <%end%>

<%= form_with model: @user do |f| %>

<p for="inputName">Name</p>

<p><%= f.text_field:name,autofocus: true,id:"inputName",placeholder:"name" %></p>

<p for="inputImage">Image</p>

<p><%= f.file_field:profile_image,placeholder:"プロフィール画像",accept: "image/*"%></p>

<p for="inputIntroduction">Introduction</p>

<p><%= f.text_area :introduction,autofocus: true,id:"inputIntroduction",placeholder:"introduction" %></p>

<p><%= f.submit'Update User' %></p>

<% end %>

         </div>

       </div>

     </div>

   </main>

   <footer>

  <div class="cotainer mt-5">

    <div class="row">

      <div class="mx-auto">

      <p>CopyRight Infratop.inc</p>

    </div>

  </div>

</footer>

 </body>