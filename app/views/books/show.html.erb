<body>

 <main>

  <p id="notice"></p>

  <div class="container px-5 px-sm-0">

      <div class="row">

        <div class="col-md-3">
         <%= render 'users/new',user:@user,book:@book %>
        </div>

        <div class="col-md-8 offset-md-1">

         <h2>Book detail</h2>

           <table class="table">

             <tbody>
               <tr>
                 <td><%= image_tag @book.user.get_profile_image(100,100) %><%= link_to "#{@book.user.name}",user_path(@book.user.id)%></td>
                 <td><%= link_to "#{@book.title}",book_path(@book.id) %><td>
                 <tb><%= @book.body %></tb>

                 <% if @book.user == current_user %>
                 <td><%= link_to'Edit',edit_book_path %></td>
                 <% end %>

                 <% if @book.user == current_user %>

                 <td><%= link_to"Destroy",book_path(@book),method: :delete %></td>

               </tr>
              </tbody>

            </table>

                 <% end %>

                 <% if flash[:notice] %>
                 <p id="notice">
                 <%= flash[:notice] %>
                 </p>

           <% end %>

          </div>

        </div>

    </div>

  </main>

  <footer>

    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>

  </footer>

</body>




