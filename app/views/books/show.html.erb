<%= render 'users/new',users:@users,book:@book_new %>

<h1>Book detail</h1>

<p><%= image_tag @book.user.get_image(100,100) %></p>

<%= link_to "#{@book.user.name}",user_path(@book.user.id) %>

<p>Title</p>

<%= link_to "#{@book.title}",book_path(@book.id) %>

<p>Option</p>

<%= @book.body %>

<p>

 <% if @book.user == current_user %>

<%= link_to'Edit',edit_book_path %>

<% end %>

|

 <% if @book.user == current_user %>

<%= link_to"Destroy",book_path(@book),method: :delete %>

</p>

<% end %>

