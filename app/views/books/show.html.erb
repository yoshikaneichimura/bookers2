<body>

 <main>

  <div class="container px-5 px-sm-0">

      <div class="row">

        <div class="col-md-3">
         <%= render 'users/new',user:@user,book:@book %>
        </div>

        <div class="col-md-8 offset-md-1">

         <h2>Book detail</h2>

           <table class="table">

             <tbody>
               <tr>
                 <td><%= image_tag @book.user.get_profile_image(100,100) %></td>
                 <td><%= link_to "#{@book.user.name}",user_path(@book.user.id)%></td>
                 <td><%= link_to "#{@book.title}",book_path(@book.id) %></td>
                 <td><%= @book.body %></td>

                 <% if @book.user == current_user %>

                 <td><%= link_to'Edit',edit_book_path,class:"btn btn-success" %></td>

                 <% end %>


                 <% if @book.user == current_user %>

                 <td><%= link_to"Destroy",book_path(@book),method: :delete,"data-confirm"=>"本当に削除しますか？",class:"btn btn-danger"%></td>

                 <% end %>

                </tr>

              </tbody>

            </table>



          </div>

        </div>

    </div>

  </main>

  <footer>

    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>

  </footer>

</body>




