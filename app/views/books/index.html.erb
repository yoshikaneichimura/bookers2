<h1>Books</h1>

<%= @books.each do |book| %>

<table>

 <thead>

  <tr>

   <th></th>

   <th>Title</th>

   <th>Option</th>

   <th colspan="3"></th>

  </tr>

 </thead>

 <tbody>

  <tr>

   <tb><%= image_tag book.user.get_image(100,100) %></tb>

   <tb><%= link_to "#{book.title}",book_path(book.id) %></tb>

